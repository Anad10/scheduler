<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProgramActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_marginHorizontal="90dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scheduler"
            android:textSize="34dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/main"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/txtProgramName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:hint="პროგრამის დასახელება"
            android:textColor="@color/dark"/>

        <EditText
            android:id="@+id/txtServerURL"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:hint="სერვერის მისამართი"
            android:textColor="@color/dark"/>

        <Button
            android:id="@+id/btn_register_program"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="პროგრამის რეგისტრაცია"
            android:textColor="@color/secondary"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>



</LinearLayout>